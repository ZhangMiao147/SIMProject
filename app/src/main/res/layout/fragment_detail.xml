<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_bar_bg">

        <ImageView
            android:id="@+id/activity_detail_image_iv"
            android:layout_width="335dp"
            android:layout_height="335dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="88dp"
            android:layout_marginRight="20dp"
            android:background="@color/white"
            android:paddingTop="64dp"
            android:paddingBottom="64dp"
            android:src="@mipmap/detail_good_img"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_detail_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Easy Sim Switch 30 GB"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_image_iv" />

        <TextView
            android:id="@+id/activity_detail_initial_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="₱299"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_name_tv" />

        <TextView
            android:id="@+id/activity_detail_final_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="₱123"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_initial_amount_tv" />

        <TextView
            android:id="@+id/activity_detail_overview_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Product Overview"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_final_amount_tv" />

        <TextView
            android:id="@+id/activity_detail_overview_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Domestic Data-only lmmortal with Free SIM"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_overview_title_tv" />

        <TextView
            android:id="@+id/activity_detail_product_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Product Details"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_overview_content_tv" />

        <TextView
            android:id="@+id/activity_detail_product_detail_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="All in one Mobile App\nUse Data as ‘Mo Creds\nNo Bills. No load required\nNationwide LTE coverage"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_product_detail_title_tv" />


        <TextView
            android:id="@+id/activity_detail_delivery_detail_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:text="Delivery Details"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_product_detail_content_tv" />

        <TextView
            android:id="@+id/activity_detail_detail_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="See below for the estimated delivery time based on your location:"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_delivery_detail_title_tv" />

        <TextView
            android:id="@+id/activity_detail_area_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="30dp"
            android:text="Area"
            android:textColor="#FFD71F"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_detail_content_tv" />

        <TextView
            android:id="@+id/activity_detail_area_1_tv"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#574D68"
            android:gravity="center"
            android:text="Metro Manila"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_area_title_tv" />

        <TextView
            android:id="@+id/activity_detail_area_2_tv"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#574D68"
            android:gravity="center"
            android:text="Luzon"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_area_1_tv" />

        <TextView
            android:id="@+id/activity_detail_area_3_tv"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="#574D68"
            android:gravity="center"
            android:text="Visayas / Mindanao"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_area_2_tv" />

        <TextView
            android:id="@+id/activity_detail_time_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="27dp"
            android:text="Estimated delivery time"
            android:textColor="#FFD71F"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_detail_content_tv" />

        <TextView
            android:id="@+id/activity_detail_time_1_tv"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="#81798E"
            android:gravity="center"
            android:text="Metro Manila"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_time_title_tv" />

        <TextView
            android:id="@+id/activity_detail_time_2_tv"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="#81798E"
            android:gravity="center"
            android:text="Luzon"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_time_1_tv" />

        <TextView
            android:id="@+id/activity_detail_time_3_tv"
            android:layout_width="163dp"
            android:layout_height="39dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="#81798E"
            android:gravity="center"
            android:text="Visayas / Mindanao"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_time_2_tv" />


        <TextView
            android:id="@+id/activity_detail_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:text="If you are unable to pesronally receive your SIM, please ensure that an authorized representative is available to sign the proof of delivery(POD) on your behalf."
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/activity_detail_area_3_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>