<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item >
        <shape>
            <gradient
                android:endColor="#6665FF"
                android:angle="-90"
                android:startColor="#392657" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>


    <item
        android:gravity="center"
        android:left="1dp"
        android:right="1dp"
        android:bottom="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#2D2042" />
            <corners
                android:radius="20dp" />
        </shape>
    </item>


</layer-list>